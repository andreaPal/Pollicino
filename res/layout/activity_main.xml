<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/RelativeLayout1"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:orientation="vertical" >

    <Button
        android:id="@+id/button_start"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:text="@string/button_start_label"
        style="@style/HomeButton"
		android:background="@drawable/selector_blue_button" />

    <Button
        android:id="@+id/button_impostazioni"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/button_start"
        android:text="@string/button_impostazioni_label"
        style="@style/HomeButton"
		android:background="@drawable/selector_blue_button" />

    <Button
        android:id="@+id/button_mappa"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/button_impostazioni"
        android:text="@string/button_mappa_label"
        style="@style/HomeButton"
		android:background="@drawable/selector_blue_button" />
    
    <Button
        android:id="@+id/button_stats"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/button_mappa"
        android:text="@string/button_stats_label"
        style="@style/HomeButton"
		android:background="@drawable/selector_blue_button" />
    
    <Button
        android:id="@+id/button_clean"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/button_stats"
        android:text="@string/button_clean_label"
        style="@style/HomeButton"
		android:background="@drawable/selector_blue_button" />

    <Button
        android:id="@+id/button_stop"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_toRightOf="@+id/button_start"
        android:text="@string/button_stop_label"
        style="@style/HomeButton"
		android:background="@drawable/selector_blue_button" />

</RelativeLayout>